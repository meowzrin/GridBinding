@model IEnumerable<Medicines>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h4>Medcines</h4>
    <hr />
    <table cellpadding="2" cellspacing="2">

        <tr>
            <th>Name</th>
            <th>Brand</th>
            <th>Quantity</th>
            <th>Expiry</th>
            <th>Price</th>
        </tr>
        @foreach (Medicines med in Model)
        {
            var color = (@med.Quantity < 10) ? "Yellow" : "none";
            var today = DateTime.Today;
            var expiry = @med.Expiry.Date;
            int dayCount = (int)expiry.Subtract(today).TotalDays;
            color = (dayCount <= 30) ? "Red" : color;
<tr style="background-color:@color">
    <td>@med.Name</td>
    <td>@med.Brand</td>
    <td>@med.Quantity</td>
    <td>@med.Expiry.ToShortDateString()</td>
    <td>@med.Price.ToString("0.##")</td>
</tr>

}
    </table>
</body>
</html>